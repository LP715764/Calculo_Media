// Cálculo de média usando a linguagem C#.

static void Main(String [] args)
{
    float nota1; float nota2; float nota3; float media;

        Console.WriteLine("Digite a nota nota 1: ");
    nota1 - float.Parse(Console.ReadLine());

    Console.WriteLine("Digite a nota nota 2: ");
    nota2 - float.Parse(Console.ReadLine());

    Console.WriteLine("Digite a nota nota 3: ");
    nota3 - float.Parse(Console.ReadLine());

    media = (nota1 + nota2 + nota3) / 3;

    if(media >= 6)
    {
        Console.WriteLine("Aprovado!");
    }
    else
    {
        Console.WriteLine("Reprovado!");
    }
    Console.WriteLine("A media do aluno é: " + media);
}
